<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- 생성자를 이용한 의존성 주입 (DI) -->
	<bean id="tv2Samsung" class="polymorhism02.SamsungTV">
		<constructor-arg ref="sony"></constructor-arg>
		<constructor-arg value="1000000"></constructor-arg>
	</bean>
	
	<bean id="sony" class="polymorhism02.SonySpeaker" />
	
	<!-- 생성자에 전달되는 값 순서 : sony, 200, 100 -->
	<bean id="tv2Samsung2" class="polymorhism02.SamsungTV">
		<constructor-arg ref="sony"/>
		<constructor-arg value="200"/>
		<constructor-arg value="100"/>
	</bean>
	
</beans>
